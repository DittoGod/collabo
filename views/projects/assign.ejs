<% include ../partials/header %>

<div class="container">
  <div class="greybox">
		<h4>Assign members to your project</h4>
		<span class="digit"><%= project.title %></span><br>
    <span class="digit">Project ID <%= project.id %></span>
    <hr class="line">
		<form>
			<p>Search and select member from dropdown</p>
			<input type="text" id="assign" onkeyup="showResults(this.value)" placeholder="Search members" autofocus>
			<div id="memberPopup">
				<ul id="membersList">
				</ul>
			</div>
		</form>
  </div>
	<div class="greybox">
		<h4>Members List</h4>
		<form action="/p/<%= project.id %>/assign" method="POST" id="newMembers">
		</form>
	</div>
</div>
<script src="/js/searchMembers.js"></script>
<% include ../partials/footer %>