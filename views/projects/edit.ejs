<% include ../partials/header %>

<h1>Edit Post: <%= blog.title %>!</h1>

<img src="../images/<%= blog.fileURL %>">
<form action="/<%= blog._id %>?_method=PUT" method="POST"> 
    <input type="text" name="blog[title]" value="<%= blog.title %>">
    <input type="file" name="blog[fileURL]" value="<%= blog.fileURL %>">
    <textarea type="text" name="blog[description]"><%= blog.description %></textarea>
    <button>Submit</button>
</form>

